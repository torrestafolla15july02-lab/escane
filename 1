            { id: 3, name: "Ana Martínez", email: "ana@empresa.com", role: "Supervisor", status: "inactive", progress: 30, lastActivity: "2023-10-28", nextFollowUp: "2023-11-15", notes: "En proceso de evaluación" },
            { id: 4, name: "Luis Fernández", email: "luis@empresa.com", role: "Usuario", status: "pending", progress: 50, lastActivity: "2023-11-08", nextFollowUp: "2023-11-14", notes: "Esperando aprobación" },
            { id: 5, name: "Sofía Ramírez", email: "sofia@empresa.com", role: "Usuario", status: "active", progress: 85, lastActivity: "2023-11-10", nextFollowUp: "2023-11-18", notes: "Alto rendimiento en métricas" },
            { id: 6, name: "Javier López", email: "javier@empresa.com", role: "Auditor", status: "active", progress: 65, lastActivity: "2023-11-07", nextFollowUp: "2023-11-13", notes: "Necesita revisión de procesos" },
            { id: 7, name: "Elena Castro", email: "elena@empresa.com", role: "Usuario", status: "inactive", progress: 20, lastActivity: "2023-10-15", nextFollowUp: "2023-11-20", notes: "Baja participación reciente" },
            { id: 8, name: "Roberto Sánchez", email: "roberto@empresa.com", role: "Supervisor", status: "active", progress: 90, lastActivity: "2023-11-10", nextFollowUp: "2023-11-19", notes: "Liderando equipo de proyecto" }
        ];
        
        const sampleActivities = [
            { user: "María González", activity: "Actualización de perfil", date: "2023-11-10", status: "Completado" },
            { user: "Carlos Rodríguez", activity: "Revisión de documentos", date: "2023-11-09", status: "En progreso" },
            { user: "Ana Martínez", activity: "Registro en sistema", date: "2023-10-28", status: "Completado" },
            { user: "Luis Fernández", activity: "Solicitud de permisos", date: "2023-11-08", status: "Pendiente" },
            { user: "Sofía Ramírez", activity: "Carga de archivos", date: "2023-11-10", status: "Completado" }
        ];
        
        // Elementos del DOM
        const loginPage = document.getElementById('loginPage');
        const dashboard = document.getElementById('dashboard');
        const loginForm = document.getElementById('loginForm');
        const logoutBtn = document.getElementById('logoutBtn');
        const loggedUser = document.getElementById('loggedUser');
        const dashboardUser = document.getElementById('dashboardUser');
        const sidebarLinks = document.querySelectorAll('.sidebar-menu a');
        const pageContents = document.querySelectorAll('.page-content');
        
        // Funciones para mostrar/ocultar páginas
        function showPage(pageId) {
            pageContents.forEach(page => {
                page.style.display = page.id === pageId ? 'block' : 'none';
            });
            
            sidebarLinks.forEach(link => {
                if (link.getAttribute('data-page') === pageId) {
                    link.classList.add('active');
                } else {
                    link.classList.remove('active');
                }
            });
        }
        
        // Inicializar datos simulados
        function initializeData() {
            // Actualizar estadísticas
            document.getElementById('totalUsers').textContent = sampleUsers.length;
            document.getElementById('activeUsers').textContent = sampleUsers.filter(user => user.status === 'active').length;
            document.getElementById('pendingUsers').textContent = sampleUsers.filter(user => user.status === 'pending').length;
            document.getElementById('followUp').textContent = sampleUsers.filter(user => user.progress > 0).length;
            
            // Llenar tabla de usuarios
            const usersTableBody = document.getElementById('usersTableBody');
            usersTableBody.innerHTML = '';
            
            sampleUsers.forEach(user => {
                const statusClass = `status-${user.status}`;
                const statusText = user.status === 'active' ? 'Activo' : 
                                 user.status === 'inactive' ? 'Inactivo' : 'Pendiente';
                
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${user.id}</td>
                    <td>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div class="user-avatar">${user.name.charAt(0)}</div>
                            <div>
                                <strong>${user.name}</strong><br>
                                <small>${user.role}</small>
                            </div>
                        </div>
                    </td>
                    <td>${user.email}</td>
                    <td>${user.role}</td>
                    <td><span class="status ${statusClass}">${statusText}</span></td>
                    <td>
                        <div class="progress-bar">
                            <div class="progress" style="width: ${user.progress}%"></div>
                        </div>
                        <small>${user.progress}%</small>
                    </td>
                    <td>
                        <div class="action-buttons">
                            <button class="action-btn view" data-id="${user.id}"><i class="fas fa-eye"></i></button>
                            <button class="action-btn edit" data-id="${user.id}"><i class="fas fa-edit"></i></button>
                            <button class="action-btn delete" data-id="${user.id}"><i class="fas fa-trash"></i></button>
                        </div>
                    </td>
                `;
                usersTableBody.appendChild(row);
            });
            
            // Llenar tabla de seguimiento
            const trackingTableBody = document.getElementById('trackingTableBody');
            trackingTableBody.innerHTML = '';
            
            sampleUsers.forEach(user => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div class="user-avatar">${user.name.charAt(0)}</div>
                            <div>
                                <strong>${user.name}</strong><br>
                                <small>${user.email}</small>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="progress-bar">
                            <div class="progress" style="width: ${user.progress}%"></div>
                        </div>
                        <small>${user.progress}% completado</small>
                    </td>
                    <td>${user.lastActivity}</td>
                    <td>${user.nextFollowUp}</td>
                    <td>${user.notes}</td>
                    <td>
                        <div class="action-buttons">
                            <button class="action-btn view" data-id="${user.id}"><i class="fas fa-eye"></i> Detalles</button>
                            <button class="action-btn edit" data-id="${user.id}"><i class="fas fa-edit"></i> Notas</button>
                        </div>
                    </td>
                `;
                trackingTableBody.appendChild(row);
            });
            
            // Llenar actividad reciente
            const recentActivityBody = document.getElementById('recentActivityBody');
            recentActivityBody.innerHTML = '';
            
            sampleActivities.forEach(activity => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div class="user-avatar" style="width: 30px; height: 30px; font-size: 14px;">${activity.user.charAt(0)}</div>
                            <div>${activity.user}</div>
                        </div>
                    </td>
                    <td>${activity.activity}</td>
                    <td>${activity.date}</td>
                    <td>
                        <span class="status ${activity.status === 'Completado' ? 'status-active' : 
                                          activity.status === 'En progreso' ? 'status-pending' : 'status-inactive'}">
                            ${activity.status}
                        </span>
                    </td>
                `;
                recentActivityBody.appendChild(row);
            });
        }
        
        // Event Listeners
        // Login
        loginForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const username = document.getElementById('username').value.trim();
            
            if (username) {
                // Guardar el nombre de usuario
                loggedUser.textContent = username;
                dashboardUser.textContent = username;
                
                // Mostrar dashboard y ocultar login
                loginPage.style.display = 'none';
                dashboard.style.display = 'block';
                
                // Inicializar datos
                initializeData();
                
                // Mostrar mensaje de bienvenida
                alert(`¡Bienvenido, ${username}! Has iniciado sesión correctamente.`);
            } else {
                alert('Por favor ingresa un nombre de usuario.');
            }
        });
        
        // Logout
        logoutBtn.addEventListener('click', function() {
            if (confirm('¿Estás seguro de que deseas cerrar sesión?')) {
                // Ocultar dashboard y mostrar login
                dashboard.style.display = 'none';
                loginPage.style.display = 'flex';
                
                // Limpiar el formulario
                loginForm.reset();
            }
        });
        
        // Navegación del sidebar
        sidebarLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const pageId = this.getAttribute('data-page');
                showPage(pageId);
            });
        });
        
        // Botón para agregar usuario
        document.getElementById('addUserBtn')?.addEventListener('click', function() {
            alert('Funcionalidad para agregar usuario. En una implementación completa, se abriría un formulario para agregar un nuevo usuario a la base de datos.');
        });
        
        // Botón para actualizar seguimiento
        document.getElementById('refreshTrackingBtn')?.addEventListener('click', function() {
            alert('Datos de seguimiento actualizados. En una implementación completa, se sincronizaría con la base de datos en tiempo real.');
            initializeData(); // Recargar datos
        });
        
        // Delegación de eventos para botones de acción
        document.addEventListener('click', function(e) {
            // Botones de acción en tabla de usuarios
            if (e.target.closest('.action-btn.view')) {
                const userId = e.target.closest('.action-btn').getAttribute('data-id');
                const user = sampleUsers.find(u => u.id == userId);
                alert(`Vista detallada de usuario:\n\nNombre: ${user.name}\nEmail: ${user.email}\nRol: ${user.role}\nEstado: ${user.status}\nProgreso: ${user.progress}%\nÚltima actividad: ${user.lastActivity}`);
            }
            
            if (e.target.closest('.action-btn.edit')) {
                const userId = e.target.closest('.action-btn').getAttribute('data-id');
                alert(`Editar usuario con ID: ${userId}\n\nEn una implementación completa, se abriría un formulario para editar los datos del usuario.`);
            }
            
            if (e.target.closest('.action-btn.delete')) {
                const userId = e.target.closest('.action-btn').getAttribute('data-id');
                if (confirm(`¿Estás seguro de que deseas eliminar al usuario con ID: ${userId}?`)) {
                    alert(`Usuario con ID: ${userId} eliminado (en una implementación real).`);
                }
            }
        });
        
        // Inicializar mostrando la página de login
        window.addEventListener('DOMContentLoaded', function() {
            // Por defecto, mostrar la página de login
            loginPage.style.display = 'flex';
            dashboard.style.display = 'none';
        });
    </script>
</body>
</html>
