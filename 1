        // Datos simulados para la demostración
        const sampleUsers = [
            { id: 1, name: "María González", email: "maria@empresa.com", role: "Administrador", status: "active", progress: 95, lastActivity: "2023-11-10", nextFollowUp: "2023-11-17", notes: "Cliente satisfecho con el servicio" },
